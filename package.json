{
  "name": "update-authors-app",
  "version": "1.0.0",
  "private": true,
  "description": "Creates and updates the AUTHORS file in your repository each time a pull request is merged",
  "author": "Gregor Martynus <gregor@martynus.net>",
  "license": "ISC",
  "repository": "https://github.com/gr2m/update-authors-app.git",
  "homepage": "https://github.com/gr2m/update-authors-app",
  "bugs": "https://github.com/gr2m/update-authors-app/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^9.5.3"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
